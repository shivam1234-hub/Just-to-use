


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.9/sweetalert2.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.9/sweetalert2.min.js"></script>
</head>
<body>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3" style="font-size:1.9rem"><img style="width:32px" src="https://img.icons8.com/material-outlined/48/000000/password.png"/>Reset your password</h1>
            <%- include('../partials/messages.ejs');%>
            <form action="/users/CreatePassword" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block">Send</button>
            </form>
           
            <p class="lead mt-4">Back to  <a href="/users/login">Login</a></p>
           
            
            
            
          </div>
        </div>
      </div>
<!-- <a href="/users/logout" class="btn btn-secondary">We have send you a mail at your login id please verify that before procedd</a> -->
