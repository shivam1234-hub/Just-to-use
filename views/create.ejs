<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3" style="font-size:1.9rem"><img style="width:32px" src="https://img.icons8.com/material-outlined/48/000000/password.png"/>Reset your password</h1>
        <%- include('../partials/messages.ejs');%>
        <form action="/users/register" method="POST">
          <div class="form-group">
         
         
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Reset password
          </button>
        </form>
        <p class="lead mt-4"> Reset you password? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
